{
  "executionRoleArn": "TASK_EXECUTION_ROLE",
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "ECS_LOGGROUP",
          "awslogs-region": "CURENT_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "volume1",
          "containerPath": "/home/node/",
          "readOnly": false
        },
        {
          "sourceVolume": "volume2",
          "containerPath": "/.next/server/pages/",
          "readOnly": false
        }
      ],
      "portMappings": [
        {
          "hostPort": 0,
          "protocol": "tcp",
          "containerPort": 3030
        }
      ],
      "cpu": 2048,
      "memory": 4096,
      "memoryReservation": 256,
      "image": "<IMAGE_NAME>",
      "healthCheck": {
        "retries": 3,
        "command": [
          "CMD-SHELL",
          "wget --spider http://localhost:3030/elb-health-check || exit 1"
        ],
        "timeout": 2,
        "interval": 5,
        "startPeriod": 20
      },
      "essential": true,
      "readonlyRootFilesystem": true,
      "name": "CONTAINER_NAME"
    }
  ],
  "volumes": [
    {
      "name": "volume1",
      "dockerVolumeConfiguration": {
        "scope": "task",
        "driver": "local"
      }
    },
    {
      "name": "volume2",
      "dockerVolumeConfiguration": {
        "scope": "task",
        "driver": "local"
      }
    }
  ],
  "taskRoleArn": "TASK_ROLE",
  "compatibilities": ["EC2"],
  "family": "TASK_DEF_FAMILY",
  "requiresCompatibilities": ["EC2"],
  "networkMode": "bridge"
}
